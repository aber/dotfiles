[user]
  name = "No Name"
  email = "no.name@example.com"

[core]
  excludesfile = ~/.gitignore
  editor = vim
  pager = less

# http://osiux.com/git-alias
[alias]
  st = status
  br = branch
  ci = commit
  co = checkout
  ma = checkout master
  di = diff --color
  dist = diff --color --cached
  d = diff --color
  dw = diff --word-diff --color
  lc = log ORIG_HEAD.. --stat --no-merges
  pu = pull --ff-only
  purb = pull --rebase
  fe = fetch
  rb = rebase
  rbi = rebase --interactive
  changes = diff --name-status -r diffstat=diff --stat -r
  patches = log --color --patch
  oneline = log --pretty=oneline --color
  edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; vim `f`"
  add-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
  graphviz = "!f() { echo 'digraph git {' ; git log --pretty='format::  %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"

[color]
  diff = auto
  status = auto
  branch = auto
  ui = true

[diff "odf"]
  textconv=odt2txt

[push]
  # since 1.7.11
  # 'simple' will be default in git 2.0 instead of 'matching'
  default = simple

# override your local user.name and user.email here
[include]
  path = .gitconfig.local

